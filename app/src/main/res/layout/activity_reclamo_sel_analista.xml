<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.reclamos.ReclamoActivity"
    >

    <ImageView
        android:src="@mipmap/login"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:theme="@style/Theme.PFT.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/login_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3A454B"
            app:popupTheme="@style/Theme.PFT.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        >



        <TextView
            android:id="@+id/reclamoSel_titulo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="15dp"
            android:alpha="0.8"
            android:text="TÃ­tulo"
            />


        <TextView
            android:id="@+id/reclamoSel_detalle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="15dp"
            android:alpha="0.8"
            android:text="Detalle"
            />

        <TextView
            android:id="@+id/reclamoSel_estado"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:background="#FFFFFF"
            android:layout_marginBottom="15dp"
            android:alpha="0.8"
            android:text="Estado"
            />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:alpha="0.8"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textSize="24sp"
                android:text="Actualizar estado:"

                />
            <Spinner
                android:id="@+id/reclamoSel_actEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Selecciona un tipo de evento" />

        </LinearLayout>
        <EditText
            android:id="@+id/reclamoSel_respuesta"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:textSize="24dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="15dp"
            android:alpha="0.8"
            android:hint="Respuesta"            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            />



        <Button
            android:id="@+id/reclamoSel_btnModificarReclamo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00AEEF"
            android:text="Actualizar reclamo"
            android:layout_marginBottom="30dp"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/reclamoSel_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#CA1414"
            android:gravity="center"
            android:background="@color/white"
            android:alpha="0"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginBottom="56dp"
        android:paddingTop="140dp"
        android:paddingHorizontal="50dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/reclamoSel_btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volver"
                android:layout_marginRight="200dp"
                android:backgroundTint="#00AEEF"

                />



        </LinearLayout>


    </LinearLayout>

</FrameLayout>