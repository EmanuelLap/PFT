<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.eventos.Evento_analistaActivity">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eventos"
            android:gravity="center_horizontal"
            android:textSize="40dp"
            android:layout_marginBottom="20dp"
            android:background="#00AEEF"
            />

        <EditText
            android:id="@+id/Usuarios_AnalistaActivity_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:hint="Titulo"
            />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Tipo de Evento:"

            />
        <Spinner
            android:id="@+id/Eventos_AnalistaActivity_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Selecciona un tipo de evento" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Modalidad:"

            />
        <Spinner
            android:id="@+id/Eventos_AnalistaActivity_modalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Selecciona una modalidad" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="ITR:"

            />
        <Spinner
            android:id="@+id/Eventos_AnalistaActivity_itr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Selecciona un ITR" />

        <EditText
            android:id="@+id/Eventos_AnalistaActivity_localizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:hint="LocalizaciÃ³n"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio:"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/Evento_AnalistaActivity_inicio_seleccion"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            />

        <Button
            android:id="@+id/Evento_AnalistaActivity_inicio"
            android:backgroundTint="#00AEEF"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            />

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fin:"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/Evento_AnalistaActivity_fin_seleccion"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            />

        <Button
            android:id="@+id/Evento_AnalistaActivity_fin"
            android:backgroundTint="#00AEEF"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            />


    </LinearLayout>

    <Button
        android:id="@+id/Usuarios_AnalistaActivity_btnFiltrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Filtrar"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#00AEEF"/>

    <ListView
        android:id="@+id/eventoAnalista_list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginTop="50dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/eventoAnalista_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volver"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="230dp"
            android:backgroundTint="#00AEEF"

            />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/eventoAnalista_agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_add"
            android:backgroundTint="#00AEEF"

            />



    </LinearLayout>

</LinearLayout>